{
    "scripts": {
        "serve": "cd web; yarn serve",
        "tsx": "cd web; yarn tsx",

        "test": "cargo test --release --bin main",

        "build-wasm": "wasm-pack build --debug --target=no-modules wasm-chess/",
        "build-perft": "cargo build --release --bin perft --features \"profiling async_feat\"",
        "build-uci": "cargo build --release --bin main",

        "run-uci": "yarn uci && ./target/release/main",
        "run-perft": "yarn perft && ./target/release/perft",

        "watch": "watchexec -e rs",

        "all": "yarn build-wasm && yarn build-perft && yarn build-uci && yarn test"
    }
}