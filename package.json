{
    "scripts": {
        "serve": "cd web; yarn serve",
        "watch": "cargo watch -w ./wasm-chess -i .gitignore -s \"yarn wasm\"",

        "test": "cargo test --release --bin main",

        "tsx": "cd web; yarn tsx",

        "wasm": "wasm-pack build --debug --target=no-modules wasm-chess/",
        "perft": "cargo build --release --bin perft --features profiling",
        "uci": "cargo build --release --bin main",

        "all": "yarn tsx && yarn wasm && yarn perft && yarn uci"
    }
}